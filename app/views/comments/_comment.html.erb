<div class="panel panel-default">
	<div class="panel-body">
		<% cache [comment, @can_moderate] do %>
			<p><em><%= comment.user.name %> said:</em></p>
			<%= comment.body %>
			<% if @can_moderate %>
				<p>
				<%= link_to 'Destroy', comment_path(comment),
						method: :delete, class: "btn btn-default" %>
				</p>
			<% end %>
		<% end %>
	</div>
</div>
